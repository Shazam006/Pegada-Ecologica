  <script>
    function calculateResult() {
	const empresaSelecionada = document.querySelector('input[name="empresa"]:checked');

      if(!empresaSelecionada) {
        
	alert('Por favor, selecione a empresa onde trabalha.');

        return;
      
}
      let total = 0;
      for (let i = 1; i <= 10; i++) {
        let q = document.querySelector('input[name="q' + i + '"]:checked');
        if (!q) {
          alert('Por favor, responda todas as perguntas.');
          return;
        }
        total += parseInt(q.value);
      }

      let resultTitle = '';
      let resultText = '';

      if (total >= 18) {
        resultTitle = "üå± Voc√™ √© Econ√¥mico!";
        resultText = "Parab√©ns! Seus h√°bitos demonstram grande consci√™ncia ambiental.";
      } else if (total >= 10) {
        resultTitle = "üåø Pouco, mas chega l√°!";
        resultText = "Voc√™ j√° faz sua parte, mas pode melhorar em alguns aspectos.";
      } else {
        resultTitle = "üî• Nada econ√¥mico!";
        resultText = "Aten√ß√£o! Seus h√°bitos t√™m grande impacto ambiental. Que tal come√ßar a mudar?";
      }

      document.getElementById("resultTitle").innerText = resultTitle;
      document.getElementById("resultText").innerText = resultText;
      document.getElementById('empresaEscolhida').innerText = "Empresa: " + empresaSelecionada.value;

      document.getElementById("resultBox").style.display = "block";
      window.scrollTo(0, document.body.scrollHeight);
    }
  </script>
